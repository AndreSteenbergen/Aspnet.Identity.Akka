@model ForgotPasswordViewmodel
@inject TenantContext tenant
@{
    ViewData["Title"] = "Wachtwoord vergeten";
}

<div class="modalform">
    <hgroup>
        <img src="~/images/@(tenant.Id)_logo.png" />
        <h1>@tenant.Name</h1>
        <h2>@tenant.Items[Profile.Tenant.Constants.SLOGAN]</h2>
    </hgroup>

    <form asp-controller="Account" asp-action="WachtwoordVergeten" method="post">
        <p>Voer hieronder uw email adres in. Er wordt een reset link verstuurd, waarmee u uw wachtwoord kan aanpassen.</p>
        <div class="inputbox withicon">
            <i class="fas fa-at"></i>
            <input asp-for="Email" placeholder="Emailadres" />
            <label>Emailadres</label>
        </div>
        <input type="submit" value="Stuur link" />
    </form>
</div>